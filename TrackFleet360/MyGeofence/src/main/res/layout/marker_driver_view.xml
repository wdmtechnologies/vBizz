<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_driver_img"
        android:layout_width="@dimen/driver_item_img_width"
        android:layout_height="@dimen/driver_item_img_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
         android:src="@drawable/admin" />

    <TextView
        android:id="@+id/tv_item_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_item_driver_img"
        android:layout_alignTop="@id/iv_item_driver_img"
         android:layout_marginStart="4dp"
        android:textSize="18sp"
         android:textColor="#000"
        android:fontFamily="@font/rubik_regular"
        android:text="Alex Cameron"/>















</RelativeLayout>
