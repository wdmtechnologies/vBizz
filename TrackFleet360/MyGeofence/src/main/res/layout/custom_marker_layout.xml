<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#f5f5f5"
      app:cardUseCompatPadding="true"
    android:elevation="@dimen/_5sdp"
    app:cardPreventCornerOverlap="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/driver_img"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/driver" />

    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hales"
           android:fontFamily="@font/rubik_regular"
          android:layout_toEndOf="@id/driver_img"
          android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/driver_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online"
        android:layout_marginStart="@dimen/_2sdp"
         android:fontFamily="@font/rubik_regular"
        android:layout_alignLeft="@id/driver_name"
        android:layout_below="@id/driver_name"
         android:textSize="@dimen/_9ssp" />

    <View
        android:id="@+id/online_view"
        android:layout_width="8dp"
        android:layout_height="8dp"
         android:background="@drawable/online_green_dot"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_alignStart="@id/driver_img"
        android:layout_marginStart="@dimen/_8sdp"/>

</RelativeLayout>
</android.support.v7.widget.CardView>
